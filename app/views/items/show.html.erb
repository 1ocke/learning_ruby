<h2 style="margin: 0 auto">Show item</h2>

<h4><%= @item.name.upcase %></h4>

<ul>
  <li>Price: <%= @item.price %> $</li>
  <li>Description: <%= urls_to_content(@item.description) %></li>
  <li>Weight: <%= @item.weight %></li>
  <li>Link: <%= urls_to_content('https://vk.com/albums270301314') %></li>
</ul>


<%= button_to "Edit item", edit_item_path, method: :get %><br>
<%= button_to "Delete item", item_path(@item), method: :delete %><br>
<%= button_to 'Main page', items_path, method: :get %>

<%= render partial: 'shared/email' %>
